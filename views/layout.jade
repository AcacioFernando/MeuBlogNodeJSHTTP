doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title #{title} - My Express Application
        link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
        link(rel='stylesheet', type='text/css', href='/stylesheets/stylesHeet.css')
        link(rel='stylesheet', type='text/css', href='/stylesheets/jasny-bootstrap.min.css')
        script(src='/javascripts/modernizr-2.6.2.js')
    body
        .navbar.navbar-inverse.navbar-fixed-top
            .container
                .navbar-header
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Application name
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li
                            a(href='/') Home
                        li
                            a(href='/about') About
                        li
                            a(href='/contact') Contact
                        li
                            a(href='/admin') Admin
        .container.body-content
            block content
            hr
            // ******FOOTER******
            footer.footer
                .container.text-center
                    small.copyright
                        | Designed with
                        i.fa.fa-heart
                        |  by
                        a(href='http://themes.3rdwavemedia.com', target='_blank') Xiaoying Riley
                        |  for developers
                // //container
            // //footer
        script(src='/javascripts/jquery-1.10.2.js')
        script(src='/javascripts/bootstrap.js')
        script(src='/javascripts/respond.js')
        script(src='/javascripts/nicEdit.js')
        script(src='/javascripts/jasny-bootstrap.min.js')
        block scripts
