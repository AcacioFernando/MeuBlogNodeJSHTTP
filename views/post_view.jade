extends layout
block content
   .row
      .container.sections-wrapper
         .row
            .primary.col-md-8.col-sm-12.col-xs-12
               for posts in post
                  section.about.section.post
                     .section-inner
                        h3.title
                           a(href='http://themes.3rdwavemedia.com/website-templates/responsive-bootstrap-theme-mobile-apps-atom/', target='_blank') #{posts.title}
                        a.col-md-12.col-sm-12.col-xs-12(href='http://themes.3rdwavemedia.com/website-templates/responsive-bootstrap-theme-mobile-apps-atom/', target='_blank')
                           img.img-responsive.project-image(src='http://static-8.nexusmods.com/15/mods/428/images/14-1-1428987769.jpg', alt='project name')
                        .content
                           p
                              | #{posts.content}

                        ul.list-inline
                           li
                              a(href='#') 2 Days Ago
                           li
                              a(href='#')
                                 i.glyphicon.glyphicon-comment
                                 |  4 Comments
                           li
                              a(href='#')
                                 i.glyphicon.glyphicon-share
                                 |  34 Shares
                        .row
                           .col-md-12
                              h2.page-header
                              //Formulário
                              .panel.panel-default
                                 .panel-heading
                                    .panel-title
                                       i.glyphicon.glyphicon-comment.pull-right
                                       h4 Comentários
                                 .panel-body
                                    form.form.form-vertical(action='/post/#{posts._id}/#{posts.title_sub}', method='post')
                                       .control-group
                                          label Nome
                                          .controls
                                             input.form-control(type='text',name='name' placeholder='Escreva seu nome')
                                       .control-group
                                          label Comentário
                                          .controls
                                             textarea.form-control(id='comment_form', name='comment', placeholder='Escreva seu comentário')

                                       .control-group
                                          label
                                          .controls
                                             button.btn.btn-primary(type='submit')
                                                | Post
                                 // /End Formulário


                              section.comment-list
                              - var controle = true
                              for comments in comment
                                 if(controle == true)
                                    - controle = false
                                    // Primeiro Comentário
                                    article.row
                                       .col-md-2.col-sm-2.hidden-xs
                                          figure.thumbnail
                                             img.img-responsive(src='http://www.keita-gaming.com/assets/profile/default-avatar-c5d8ec086224cb6fc4e395f4ba3018c2.jpg')
                                             figcaption.text-center #{comments.name}
                                       .col-md-10.col-sm-10
                                          .panel.panel-default.arrow.left
                                             .panel-body
                                                header.text-left
                                                   .comment-user
                                                      i.fa.fa-user #{comments.name}
                                                   time.comment-date #{comments.date}
                                                      i.fa.fa-clock-o
                                                .comment-post
                                                   p=comments.comment

                                 else
                                    - controle = true

                                     //Segundo Comentário
                                    article.row
                                       .col-md-10.col-sm-10
                                          .panel.panel-default.arrow.right
                                             .panel-body
                                                header.text-right
                                                   .comment-user
                                                      i.fa.fa-user #{comments.name}
                                                   time.comment-date #{comments.date}
                                                      i.fa.fa-clock-o
                                                .comment-post
                                                   p=comments.comment

                                       .col-md-2.col-sm-2.hidden-xs
                                          figure.thumbnail
                                             img.img-responsive(src='http://www.keita-gaming.com/assets/profile/default-avatar-c5d8ec086224cb6fc4e395f4ba3018c2.jpg')
                                             figcaption.text-center #{comments.name}


